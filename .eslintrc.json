{
  "settings": {
    "react": {
      "version": "16.8.6"
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:cypress/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module",
    "project": "./tsconfig.json",
    "useJSXTextNode": true
  },
  "env": {
    "browser": true,
    "node": true,
    "jquery": true,
    "jest": true,
    "es6": true,
    "commonjs": true,
    "cypress/globals": true
  },
  "plugins": ["prettier", "react", "jsx-a11y", "cypress"],
  "rules": {
    "complexity": [2, 11],
    "no-console": 0,
    "react/no-find-dom-node": [0],
    "react/prop-types": [1],
    "react/require-default-props": [0]
  },
  "globals": {
    "expect": true,
    "mount": true,
    "render": true,
    "shallow": true,
    "sinon": true,
    "cy": true
  }
}
